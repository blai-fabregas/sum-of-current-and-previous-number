#loop to iterate numbers 1-10
for n in range (1,11):
    
#assigning the current number
    current_number = n

#assigning how to find the previous number
    previous_number = n - 1 if n > 1 else 0

#printing the sum of the current and previous number
    sum_of_numbers = current_number + previous_number
    print (f"CURRENT NO.{current_number}, PREVIOUS NO. {previous_number}, THE SUM IS : {sum_of_numbers}")